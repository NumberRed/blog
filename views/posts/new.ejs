<div class="ui main text container segment">
	<div class="ui huge header">New Post</div>
	<form class="ui form" action="/posts" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="post[title]" placeholder="Title">
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="post[image]" placeholder="Image">
		</div>
		<div class="field">
			<label>Post Description</label>
			<textarea name="post[description]"></textarea>
		</div>
		<input class="ui inverted orange basic button" type="submit">
	</form>
</div>

