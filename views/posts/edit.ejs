<%- include("../partials/header") %>
<%- include("../partials/sider.html") %>

<div class="ui main text container segment">
	<div class="ui huge header">Edit post: "<%= post.title %>"</div>
	<form class="ui form" action="/posts/<%= post._id %>?_method=PUT" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="post[title]" value="<%= post.title %>">
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="post[image]" value="<%= post.image %>">
		</div>
		<div class="field">
			<label>Post Content</label>
			<textarea name="post[description]"><%= post.description %></textarea>
		</div>
		<input class="ui inverted orange big basic button" type="submit">
	</form>
</div>

<%- include("../partials/footer") %>